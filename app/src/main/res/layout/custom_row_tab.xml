<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp" android:background="@color/colorAccent"


    >

    <ImageView
        android:id="@+id/rowImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id = "@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity ="center_vertical"
        android:text="dummy text"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:layout_alignTop="@+id/rowImageView"
        android:layout_toEndOf="@+id/rowImageView"
        android:layout_marginTop="8dp" />
    <View
        android:id = "@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c8c8"
        android:layout_alignStart="@+id/nameTextView"
        android:layout_marginEnd="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/roomTextView"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        android:layout_below="@+id/nameTextView"
        android:layout_toEndOf="@+id/rowImageView" />

    <ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:id="@+id/favoritesImageView"
    android:src="@android:drawable/ic_input_add"
        android:background="@color/colorAccent"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/dividerView" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/chatImageView"
        android:src="@android:drawable/sym_action_chat"
        android:background="@color/colorAccent"
        android:layout_alignTop="@+id/favoritesImageView"
        android:layout_toStartOf="@+id/favoritesImageView" />

</RelativeLayout>