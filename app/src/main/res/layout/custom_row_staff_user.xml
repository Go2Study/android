<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/customrowtab">

        <ImageView
        android:id="@+id/rowImageViewStaffUser"
        android:layout_width="60dp"
            android:padding="1dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />


        <TextView
        android:id = "@+id/nameTextViewStaff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity ="center_vertical"
        android:text="dummy text"
        android:textColor="#000"
        android:textSize="16dp"
        android:layout_alignTop="@+id/rowImageViewStaffUser"
        android:layout_toEndOf="@+id/rowImageViewStaffUser"
        android:layout_marginTop="8dp" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/roomTextViewStaff"
        android:textColor="#000"
        android:textSize="12dp"
        android:layout_below="@+id/nameTextViewStaff"
        android:layout_toEndOf="@+id/rowImageViewStaffUser" />

</RelativeLayout>