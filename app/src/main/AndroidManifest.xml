<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lol.go2study.go2study" >

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="Go2Study.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="5" />

        <activity android:name=".WelcomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="go2study" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateUserActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".CalendarActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".PeopleActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".MessagingActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".GroupActivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".GroupChat"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".androidchat.ChatMainActivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".androidchat.LoginActivityChat"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".CreateEventActivity"
            android:label="@string/title_activity_create_event"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".TeacherScheduleActivity"
            android:label="@string/title_activity_teacher_schedule"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>
